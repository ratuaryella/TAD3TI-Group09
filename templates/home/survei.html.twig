{% extends 'base.html.twig' %}

{% block title %}Sistem Kepuasan Masyarakat{% endblock %}

{% block body %}
    <h1>Survei</h1>
    <div class="container">
        <form action="/jawab" method="post">
            <input type="text" name="responden">

            {% for pertanyaan in pertanyaans %}
                <tr>
                    <td>{{ pertanyaan.pertanyaan }}</td>

                    <td>
                        <div class="radio">
                        <label>
                            <input type="radio" name="data{{ jawaban }}" id="u1" value="1">a. Tidak Sesuai
                        </label>
                        </div>
                                <input type="radio" name="data{{ jawaban }}" id="u1" value="2">b. Kurang Sesuai
                        <div class="radio">
                            <label>
                                <input type="radio" name="data{{ jawaban }}" id="u1" value="3">c. Sesuai
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="data{{ jawaban }}" id="u1" value="4">d. Sangat Sesuai
                            </label>
                        </div>
                        <input type="hidden" name="{{jawaban}}" value="{{pertanyaan.id}}"/>
                    </td>
                </tr>
                {% set jawaban = jawaban + 1 %}
            {% endfor %}
            <br>
            <input type="hidden" name="jawaban" value="{{jawaban}}"/>
            <input type="submit" name="env" value="submit" class="btn btn-lg btn-primary active mt-4">
        </form>
    </div>

{% endblock %}