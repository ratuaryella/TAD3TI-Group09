{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title 'Welcome to Sikemas' %}

{% block page_content %}
    <style>
        p { max-width: 600px; }
    </style>

    <div class="container">
        <div class="row">
            <h1>Dashboard</h1>
        </div>
        <div class="row mt-3">
            <div class="col-6 alert-success">
                <span class="display-3">{{ countResponden['value'] }}</span> Responden
            </div>
        </div>
        <div class="row mt-3">
            <table>
                <thead class="thead-dark">
                <tr>
                    <th>Unsur Pertanyaan</th>
                    <th>Nilai Rata Rata</th>
                </tr>
                </thead>
                <tbody>
                {% for IKMQuestion in IKMQuestions %}
                    <tr>
                        <td>{{ IKMQuestion['desc'] }}</td>
                        <td>{{ IKMQuestion['value'] }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
